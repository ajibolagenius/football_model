<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Football Oracle</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .glass {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(10px);
        }
    </style>
</head>

<body class="bg-slate-900 text-white min-h-screen p-6 font-sans">

    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <header class="flex justify-between items-center mb-8 border-b border-slate-700 pb-4">
            <div>
                <h1
                    class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-cyan-400">
                    ‚öΩ Football Oracle
                </h1>
                <p class="text-slate-400 text-sm">Hybrid AI Architecture v1.0</p>
            </div>
            <div class="text-xs bg-slate-800 px-3 py-1 rounded-full text-emerald-400 border border-emerald-900">
                ‚óè System Online
            </div>
        </header>

        <!-- Match List -->
        <div class="space-y-4">
            <% if (matches.length===0) { %>
                <div class="text-center text-slate-500 py-10">No upcoming matches found in database.</div>
                <% } %>

                    <% matches.forEach(match=> { %>
                        <div
                            class="glass border border-slate-700 rounded-xl p-6 transition hover:border-emerald-500/50">
                            <div class="flex flex-col md:flex-row justify-between items-center gap-4">

                                <!-- Match Info -->
                                <div class="text-center md:text-left flex-1">
                                    <div class="text-xs text-slate-400 mb-1">
                                        <%= new Date(match.date).toDateString() %>
                                    </div>
                                    <div
                                        class="text-xl font-bold flex items-center justify-center md:justify-start gap-3">
                                        <span class="text-white">
                                            <%= match.home_team %>
                                        </span>
                                        <span class="text-slate-500 text-sm">vs</span>
                                        <span class="text-white">
                                            <%= match.away_team %>
                                        </span>
                                    </div>
                                </div>

                                <!-- Action Area -->
                                <div class="flex flex-col items-end gap-2 w-full md:w-auto"
                                    id="card-<%= match.match_id %>">
                                    <button onclick="getPrediction('<%= match.match_id %>')"
                                        class="w-full md:w-auto bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white px-6 py-2 rounded-lg font-medium shadow-lg shadow-emerald-900/20 transition transform active:scale-95">
                                        üîÆ Predict Match
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% }); %>
        </div>
    </div>

    <!-- Client-Side Script to Talk to Node Server -->
    <script>
        async function getPrediction(matchId) {
            const card = document.getElementById(`card-${matchId}`);
            // Show Loading State
            card.innerHTML = `<div class="text-emerald-400 animate-pulse font-mono text-sm">Crunching numbers...</div>`;

            try {
                // Call our Node.js endpoint
                const res = await fetch(`/predict/${matchId}`);
                const data = await res.json();

                if (data.error) {
                    card.innerHTML = `<div class="text-red-400 text-sm">‚ùå ${data.error}</div>`;
                    return;
                }

                // Render Result
                const confidence = (data.prob_home * 100).toFixed(1);
                const color = data.prob_home > 0.55 ? 'text-emerald-400' : (data.prob_home < 0.30 ? 'text-red-400' : 'text-yellow-400');

                card.innerHTML = `
                    <div class="text-right">
                        <div class="text-xs text-slate-400">Home Win Probability</div>
                        <div class="text-2xl font-bold ${color}">${confidence}%</div>
                        <div class="text-xs text-slate-500 mt-1 font-mono">
                            Draw: ${(data.prob_draw * 100).toFixed(0)}% | Away: ${(data.prob_away * 100).toFixed(0)}%
                        </div>
                    </div>
                `;
            } catch (err) {
                card.innerHTML = `<div class="text-red-400 text-sm">‚ùå Connection Failed</div>`;
            }
        }
    </script>
</body>

</html>